<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:clickable="true"
    android:layout_margin="@dimen/default_margin_5"
    android:foreground="?android:selectableItemBackground"
    card_view:cardCornerRadius="4dp"
    card_view:cardElevation="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <ImageView
            android:id="@+id/imgArticle"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_menu_barcode" />

        <TextView
            android:id="@+id/tvTitleArticle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:layout_toLeftOf="@+id/imgArticle"
            android:layout_toStartOf="@+id/imgArticle"
            android:ellipsize="end"
            android:maxLines="3"
            android:textColor="@color/blackYoung"
            android:textSize="16sp"
            tools:text="Jonathan Agnew: West Indies must build on special win at Headingley" />

        <TextView
            android:id="@+id/tvUrlArticle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/tvTitleArticle"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:layout_toLeftOf="@+id/imgArticle"
            android:layout_toStartOf="@+id/imgArticle"
            android:ellipsize="end"
            android:maxLines="2"
            android:textSize="13sp"
            tools:text="Napier Lopez" />

        <TextView
            android:id="@+id/tvDatePublishedArticle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/tvUrlArticle"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:layout_toLeftOf="@+id/imgArticle"
            android:layout_toStartOf="@+id/imgArticle"
            android:textSize="13sp"
            tools:text="15 Minutes Ago" />

    </RelativeLayout>

</android.support.v7.widget.CardView>